<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_details_custom_border">

            <ImageView
                android:id="@+id/feed_details_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher"
                android:paddingRight="@dimen/layoutMargin_10"
                android:paddingEnd="@dimen/layoutMargin_10"
                android:contentDescription="@string/lorem_ipsum_short"/>

        <TextView
            android:id="@+id/feed_details_published_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/published"
            android:layout_toLeftOf="@+id/favorite_selection_image"
            android:layout_toStartOf="@+id/favorite_selection_image"
            android:layout_toRightOf="@id/feed_details_image"
            android:layout_toEndOf="@id/feed_details_image"/>

        <TextView
            android:id="@+id/feed_details_published_pub_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:layout_toRightOf="@id/feed_details_image"
            android:layout_toEndOf="@id/feed_details_image"
            android:layout_below="@id/feed_details_published_label"/>

        <LinearLayout
            android:id="@+id/feed_details_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feed_details_published_pub_date"
            android:layout_toRightOf="@id/feed_details_image"
            android:layout_toEndOf="@id/feed_details_image"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feed_details_source_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/source"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/feed_details_source_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/layoutMargin_10"
                android:layout_marginStart="@dimen/layoutMargin_10"
                android:contentDescription="@string/lorem_ipsum_short"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/favorite_selection_image"
            android:tag="notSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite_not_selected"
            android:tint="@color/colorAccent"
            android:contentDescription="@string/lorem_ipsum_short"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/feed_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:textStyle="bold"
            android:layout_below="@id/feed_details_image_layout"/>

        <TextView
            android:id="@+id/feed_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:layout_below="@id/feed_details_title"/>

    </RelativeLayout>

    <WebView
        android:id="@+id/feed_item_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</LinearLayout>