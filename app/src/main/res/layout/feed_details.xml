<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_details_custom_border">

        <FrameLayout
            android:id="@+id/feed_details_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/feed_details_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/lorem_ipsum_short"/>

            <ImageView
                android:id="@+id/feed_source_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_add_white_18dp"
                android:contentDescription="@string/lorem_ipsum_short"
                android:layout_gravity="bottom|end"/>

        </FrameLayout>

        <TextView
            android:id="@+id/feed_details_published_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/published"
            android:layout_toRightOf="@id/feed_details_images"
            android:layout_toEndOf="@id/feed_details_images"/>

        <TextView
            android:id="@+id/feed_details_published_pub_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:layout_toRightOf="@id/feed_details_images"
            android:layout_toEndOf="@id/feed_details_images"
            android:layout_below="@id/feed_details_published_label"/>

        <TextView
            android:id="@+id/feed_details_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source"
            android:layout_toRightOf="@id/feed_details_images"
            android:layout_toEndOf="@id/feed_details_images"
            android:layout_below="@id/feed_details_published_pub_date"/>

        <TextView
            android:id="@+id/feed_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:textStyle="bold"
            android:layout_below="@id/feed_details_source"/>

        <TextView
            android:id="@+id/feed_details_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_short"
            android:layout_below="@id/feed_details_title"/>

    </RelativeLayout>

    <WebView
        android:id="@+id/feed_item_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

</LinearLayout>