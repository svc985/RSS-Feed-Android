<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/feed_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/lorem_ipsum_short"
        android:layout_marginLeft="@dimen/layoutMargin_10"
        android:layout_marginStart="@dimen/layoutMargin_10"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layoutMargin_10"
        android:layout_marginStart="@dimen/layoutMargin_10"
        android:layout_toRightOf="@+id/feed_image"
        android:layout_toEndOf="@+id/feed_image"
        android:layout_toLeftOf="@+id/btn_show_feed_details"
        android:layout_toStartOf="@+id/btn_show_feed_details"
        android:text="@string/lorem_ipsum_short"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/txt_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layoutMargin_10"
        android:layout_marginStart="@dimen/layoutMargin_10"
        android:layout_below="@+id/txt_title"
        android:gravity="bottom"
        android:layout_toRightOf="@+id/feed_image"
        android:layout_toEndOf="@+id/feed_image"
        android:layout_alignParentBottom="true"
        android:text="@string/lorem_ipsum_short"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/btn_show_feed_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/lorem_ipsum_short"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_navigate_next_black_24dp" />

    <View
        android:id="@+id/splitter_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>